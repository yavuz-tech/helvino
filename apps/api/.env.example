# Database Configuration
DATABASE_URL="postgresql://helvino:helvino_dev_password@localhost:5432/helvino_dev?schema=public"

# Redis Configuration (for rate limiting)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=4000
HOST=0.0.0.0
LOG_LEVEL=info

# Proxy Configuration (prevent X-Forwarded-For spoofing)
# For development: leave empty or set to "127.0.0.1,::1"
# For production: set to your actual proxy IPs (comma-separated)
# Examples:
#   TRUSTED_PROXIES="10.0.0.1,172.16.0.1"
#   TRUSTED_PROXIES="loopback,linklocal,uniquelocal"
TRUSTED_PROXIES="127.0.0.1,::1"

# Org Token Security (REQUIRED)
# Secret key for signing short-lived org tokens (5 min expiry)
# Generate with: openssl rand -base64 32
ORG_TOKEN_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Internal API Key (OPTIONAL)
# Bypass org token requirement for internal/dashboard usage
# Leave empty in production if not needed
INTERNAL_API_KEY=""

# Internal Override Writes (OPTIONAL)
# If true, internal API key bypasses writeEnabled check (emergency override)
# Default: false (respect writeEnabled even with internal key)
# Set to true only for emergency admin operations
INTERNAL_OVERRIDE_WRITES=false

# Admin User Credentials (REQUIRED for seed)
# Default admin account created during database seed
# ⚠️  CHANGE THESE IN PRODUCTION!
ADMIN_EMAIL="admin@helvino.io"
ADMIN_PASSWORD="helvino_admin_2026"

# Org Owner Credentials (REQUIRED for seed)
# Default org user (customer portal) created during database seed
# ⚠️  CHANGE THESE IN PRODUCTION!
ORG_OWNER_EMAIL="owner@demo.helvino.io"
ORG_OWNER_PASSWORD="demo_owner_2026"

# Session Secret (REQUIRED for cookie-based auth)
# Secret key for signing session cookies (used by both admin and org user sessions)
# Generate with: openssl rand -base64 32
SESSION_SECRET="your-session-secret-here-generate-with-openssl-rand-base64-32"

# Stripe Billing (optional in dev — app builds and runs without these)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PRICE_ID_STARTER=""
STRIPE_PRICE_PRO=""
STRIPE_PRICE_BUSINESS=""
STRIPE_SUCCESS_URL=""
STRIPE_CANCEL_URL=""
GRACE_DAYS=7
