{
  "name": "@helvino/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=2048' nodemon --watch src --ext ts,json --exec tsx src/index.ts",
    "build": "tsc",
    "start": "prisma migrate deploy && node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist node_modules",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:smoke-test": "tsx scripts/db_smoke_test.mjs",
    "seed:live-visitors": "tsx scripts/seed-live-visitors.ts",
    "verify:live-visitors": "tsx scripts/verify-live-visitors.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.2",
    "@fastify/session": "^11.1.1",
    "@google/generative-ai": "^0.24.1",
    "@helvino/shared": "workspace:*",
    "@prisma/client": "5.22.0",
    "argon2": "^0.44.0",
    "dompurify": "^3.3.1",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.1.0",
    "fastify-socket.io": "^5.1.0",
    "geoip-lite": "^1.4.10",
    "ioredis": "^5.9.2",
    "jsdom": "^28.0.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "openai": "^6.18.0",
    "otpauth": "^9.5.0",
    "prisma": "5.22.0",
    "qrcode": "^1.5.4",
    "socket.io": "^4.8.1",
    "stripe": "^16.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/geoip-lite": "^1.4.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.9",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "socket.io-client": "^4.8.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
